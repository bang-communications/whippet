#!/usr/bin/env php
<?php

if (file_exists(__DIR__.'/../vendor/autoload.php')) {
    // Checked-out repo, after `composer install` has been run
    require __DIR__.'/../vendor/autoload.php' ;
} elseif (file_exists(__DIR__.'/../../../autoload.php')) {
    // Installed as a dependency of another project
    require __DIR__.'/../../../autoload.php';
} else {
    // Fallback to vendor.phar
    // (for environments where we choose not to run `composer install`)
    require __DIR__.'/../vendor.phar';
}

// Autoload
$loader = new \Aura\Autoload\Loader;
$loader->register();
$loader->addPrefix('Dxw\\Whippet', __DIR__.'/../src');

date_default_timezone_set("UTC");

define('WHIPPET_ROOT', dirname(dirname(__FILE__)));

// DI

$builder = new \DI\ContainerBuilder();
$builder->addDefinitions([
    'cwd' => getcwd(),
]);
$container = $builder->build();

// Set up the application

$application = $container->get('\\Symfony\\Component\\Console\\Application');
$container->get('\\Dxw\\Whippet\\Commands\\Dependencies')->inject(
    $container->get('\\Dxw\\Whippet\\Factory'),
    $container->get('cwd')
);
$application->add($container->get('\\Dxw\\Whippet\\Commands\\Dependencies'));

// Run it

$application->run();
